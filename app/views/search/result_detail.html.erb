
<p style="color: green"><%= notice %></p>

<div>
  <%= link_to "Back", :back, class: "ui blue button" %>
</div>

<%= render plain: @result_detail %>

<div class="ui container">
  <h1 class="ui header">Basic information</h1>
  <div id="basics">
    <table class="ui celled selectable table">
      <thead>
        <tr>
          <th>法人番号</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @result_detail[1][1] %></td>
      </tbody>
    </table>
  </div>
</div>

<div class="ui container">
  <h1 class="ui header">History information</h1>
  <div id="history">
    <table class="ui celled selectable table">
      <thead>
        <tr>
          <th>項番</th>
          <th>更新年月日</th>
          <th>変更年月日</th>
          <th>法人名</th>
          <th>郵便番号</th>
          <th>本店所在地（都道府県）</th>
          <th>本店所在地（市区町村）</th>
          <th>本店所在地（番地）</th>
          <th>XXXX</th>
          <th>XXXX</th>
          <th>XXXX</th>
        </tr>
      </thead>
      <tbody>
        <% @result_detail.reverse_each.with_index(1) do |row, index| %>
          <% break if index == @result_detail.size - 1 %>
          <tr>
            <td><%= index %></td>
            <td><%= row[4] %></td>
            <td><%= row[5] %></td>
            <td><%= row[6] %></td>
            <td><%= row[15] %></td>
            <td><%= row[9] %></td>
            <td><%= row[10] %></td>
            <td><%= row[11] %></td>
            <td><%=  %></td>
            <td><%=  %></td>
            <td><%=  %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
